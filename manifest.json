{
    "manifest_version": 3,
    "name": "'Improve YouTube!' (Video & YouTube Tools)ðŸŽ§",
    "short_name": "ImprovedTube",
    "description": "__MSG_description_ext__",
    "version": "3.820",
    "default_locale": "en",
    "icons": {
        "128": "icons/128.png",
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "ui/popup.html"
    },
    "options_page": "ui/options.html",
    "content_scripts": [
        {
            "all_frames": true,
            "css": [
                "content-styles.css"
            ],
            "exclude_matches": [
                "https://www.youtube.com/improvedtube",
                "https://www.youtube.com/tv*",
                "https://www.youtube.com/audiolibrary/*",
                "http://studio.youtube.com/*"
            ],
            "js": [
                "content-scripts.js"
            ],
            "matches": [
                "https://www.youtube.com/*"
            ],
            "run_at": "document_start"
        },
        {
            "all_frames": true,
            "css": [
                "ui/satus/satus.css",
                "ui/styles.css"
            ],
            "js": [
                "ui/satus/satus.js",
                "ui/script.js"
            ],
            "matches": [
                "https://www.youtube.com/improvedtube"
            ],
            "run_at": "document_end"
        },
        {
            "all_frames": true,
            "js": [
                "ui/page.js"
            ],
            "matches": [
                "https://www.youtube.com/improvedtube"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [{
        "resources": ["youtube-scripts.js"],
        "matches": ["https://www.youtube.com/*"]
    }],
    "offline_enabled": true,
    "optional_permissions": [
        "downloads"
    ],
    "permissions": [
        "contextMenus",
        "storage"
    ]
}